<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutExpandedPro">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="7dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp">

        <RelativeLayout
            android:id="@+id/layoutExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"
                android:text="Numero: " />

            <TextView
                android:id="@+id/textView6"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_alignStart="@+id/textView5"
                android:text="Curso: " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profesorGrupo"
                android:layout_below="@+id/cursoGrupo"
                android:layout_alignStart="@+id/textView5"
                android:text="Profesor: " />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cicloGrupo"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView7"
                android:text="Ciclo:" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/botonEditarGrupo"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/cicloGrupo"
                android:text="Dias:" />

            <TextView
                android:id="@+id/numeroGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"

                android:text="numero"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"

                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/cursoGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"

                android:layout_below="@+id/numeroGrupo"
                android:text="curso"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/profesorGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_below="@+id/cursoGrupo"
                android:text="Profesor"
                android:textAppearance="?attr/textAppearanceListItem" />


            <TextView
                android:id="@+id/cicloGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_below="@+id/profesorGrupo"
                android:text="I 2016"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/diasGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginStart="45dp"
                android:layout_below="@+id/cicloGrupo"
                android:layout_marginTop="-2dp"
                android:text="Lunes y Martes"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/botonEditarGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/diasGrupo"
                android:layout_alignBottom="@+id/diasGrupo"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="editar" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


